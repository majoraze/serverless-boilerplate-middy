{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Find all Drivers",
  "type": "object",
  "required": [
    "body",
    "statusCode"
  ],
  "properties": {
    "statusCode": {
      "type": "number"
    },
    "body": {
      "type": "object",
      "properties": {
        "docs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "_id": {
                "type": "string"
              }
            }
          }
        },
        "total": {
          "type": "number"
        },
        "limit": {
          "type": "number"
        },
        "page": {
          "type": "number"
        },
        "pages": {
          "type": "number"
        }
      }
    }
  }
}